$(".grid").append("<%= j render(@images) %>");
<% if @images.next_page %>
$(".pagination").replaceWith("<%= j will_paginate(@images) %>");
<% else %>
$(".pagination").remove();
<% end %>
<% sleep 1 %>
$('section').imagesLoaded( function() {
	var masonry = $('.grid').data('masonry');
	masonry.reloadItems();
	masonry.layout();
});