
<div class="main-container">
  <div class="signup">
    <h1>Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "signup-form") do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control" %><br/>
    </div>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "User Name", class: "form-control" %><br/>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password(8 characters minimum)", class: "form-control" %><br/>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-control" %><br/>
    </div>
    <div class="form-group">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $("body").attr("style", "background-image: url(/assets/images/signin.jpg)");
  });
</script>